#include <stdio.h>   // 1번
int main(void)
{
	printf("#        #\n");
	printf("#        #\n");
	printf("#        #\n");
	printf("#####     \n");
	printf("#        #\n");
	printf("#        #\n");
	printf("#        #\n");

	return 0;
}

#include <stdio.h>  // 2번
int main(void)
{
	printf("이름: 김경록\n");
	printf("주소: 광주 용봉동\n");
	printf("전화번호: 010-65xx-67xx\n");
	return 0;
}


#include <stdio.h>  // 2번
int main(void)
{
	int x, y, sum;
	printf("상품 가격을 입력하시오: ");
	scanf_s("%d", &x);

	printf("상품의 개수를 입력하시오: ");
	scanf_s("%d", &y);

	sum = x * y;
	printf("총 가격은 %d입니다.", sum);
	
	return 0;
}
상품 가격을 입력하시오: 10000
상품의 개수를 입력하시오: 3
총 가격은 30000입니다.

#include <stdio.h>  // 4번
int main(void)
{
	int age;
	printf("나이를 입력하시오: ");
	scanf_s("%d", &age);

	printf("내년이면 %d살이 되시는군요.", age + 1);

	return 0;
}
나이를 입력하시오: 20
내년이면 21살이 되시는군요.

#include <stdio.h>  // 5번
int main(void)
{
	int x, y, z, mean;
	printf("정수를 입력하시오: ");
	scanf_s("%d", &x);

	printf("정수를 입력하시오: ");
	scanf_s("%d", &y);

	printf("정수를 입력하시오: ");
	scanf_s("%d", &z);

	mean = (x + y + z) / 3;
	printf("평균은 %d입니다.", mean);
	
	return 0;
}
정수를 입력하시오: 10
정수를 입력하시오: 20
정수를 입력하시오: 30
평균은 20입니다.

#include <stdio.h>  // 6
int main(void)
{
	int x, y, z;

	printf("삼각형 내각 2개의 각: ");
	scanf_s("%d%d", &x, &y);

	z = 180 - x - y;
	printf("세번째 각은 %d", z);
	
	return 0;
}
삼각형 내각 2개의 각: 30 60
세번째 각은 90
